<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/darkBackground</item>
        <item name="useMaterialThemeColors">true</item>
    </style>
    
    <style name="cardViewPtsAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="cardViewTitleAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_high_type</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recordCardViewAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_high_type</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>